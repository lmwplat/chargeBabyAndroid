<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:layout_margin="@dimen/item_margin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/tv_comment_portrait"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@mipmap/user_icon" />

        <View
            android:layout_width="8dip"
            android:layout_height="fill_parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comment_author"
                android:layout_width="wrap_content"
                android:layout_height="24dip"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="王丹凤"
                android:textColor="@color/colorPrimary" />


            <TextView
                android:id="@+id/tv_comment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:text="定级赛发射车啥都吃设计阿斯蒂芬asjskldfjasdlfsoifasdfasiojdsifodfjasdi1阿萨德飞洒地方 啥地方来看的疗法阿萨德分类看到发 "
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="1dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/ll_reply_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorCommentLayoutBg"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginRight="1dp"
                android:visibility="gone">

                <com.liumw.chargebaby.myviews.MylistView
                    android:id="@+id/lv_comment_reply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_comment_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="07-10"
                    android:textColor="@color/gray" />

                <ImageButton
                    android:id="@+id/tv_comment_more_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/comment"
                    android:focusable="true"
                    android:visibility="gone"/>
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
