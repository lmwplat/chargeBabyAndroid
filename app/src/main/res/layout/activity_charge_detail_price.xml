<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已建交流电桩"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_ac_builded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在建交流电桩"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address"
            />
        <TextView
            android:id="@+id/tv_charge_detail_ac_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已建直流电桩"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_dc_builded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在建直流电桩"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address"
            />
        <TextView
            android:id="@+id/tv_charge_detail_dc_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/normal_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开放时间"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/normal_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务电话"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/normal_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用标准"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_standard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/normal_bg_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收费标准"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_fee_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/normal_bg_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电桩详情"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/normal_bg_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建设单位"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/text_size_detail_address" />
        <TextView
            android:id="@+id/tv_charge_detail_depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size_detail_address"/>
    </LinearLayout>

</LinearLayout>
